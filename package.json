{
  "name": "harmonic-mixing",
  "private": true,
  "scripts": {
    "start": "bun --hot ./src/index.html",
    "build": "bun build ./src/index.html --minify --outdir=dist",
    "prepare": "husky",
    "postinstall": "bun run prettier:write",
    "prettier:check": "prettier -c --log-level=warn .",
    "prettier:write": "prettier -lw --log-level=warn ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-plugin-tailwind": "^0.0.15",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13"
  }
}
